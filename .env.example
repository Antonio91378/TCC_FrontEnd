# Default source: 'firebase' or 'opcua'
NEXT_PUBLIC_DEFAULT_SOURCE=firebase

# Firebase Realtime Database (or can adapt to Firestore if needed)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_DATABASE_URL=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
# Path in RTDB where the variables live (e.g., plant/vars)
NEXT_PUBLIC_FIREBASE_PATH=plant

# OPC UA direct (client runs on server API)
# Example: opc.tcp://192.168.0.10:4840
NEXT_PUBLIC_OPCUA_ENDPOINT=
# Comma-separated NodeIds in read order, e.g: ns=2;s=PV,ns=2;s=SP,ns=2;s=MV,ns=2;s=CV,ns=2;s=ERROR,ns=2;s=STATUS
NEXT_PUBLIC_OPCUA_NODE_IDS=
# Optional names mapping for the list above (aligns indexes), e.g.: pv,sp,mv,cv,error,status
NEXT_PUBLIC_OPCUA_NODE_MAP=pv,sp,mv,cv,error,status
# Polling interval in ms
NEXT_PUBLIC_OPCUA_POLL_MS=1000

# Server-side OPCUA defaults (can be overridden per-request with query params)
OPCUA_ENDPOINT=
OPCUA_NODE_IDS=

# /signal (boolean value)
NEXT_PUBLIC_BOOL_DEFAULT_SOURCE=firebase
NEXT_PUBLIC_BOOL_FIREBASE_PATH=bool
NEXT_PUBLIC_BOOL_FIREBASE_CMD_PATH=bool_cmd
NEXT_PUBLIC_BOOL_OPCUA_ENDPOINT=
NEXT_PUBLIC_BOOL_OPCUA_NODE_ID=
NEXT_PUBLIC_BOOL_POLL_MS=1000
